<UserControl x:Class="GeometryX.ColorInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d">
    <Grid Margin="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Name="BrushStr" Text="#FFFFFFFF" hc:BorderElement.CornerRadius="0" 
                 BorderThickness="0" IsReadOnly="True" AutoWordSelection="True"/>
        <TextBlock Grid.Column="1" x:Name="BrushShow" Background="LightGoldenrodYellow" Margin="1"/>
        <TextBlock Grid.Column="2" x:Name="BrushName" Text="LightGoldenrodYellow" VerticalAlignment="Center"/>
    </Grid>
</UserControl>